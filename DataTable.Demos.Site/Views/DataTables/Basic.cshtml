@{
    ViewBag.Title = "Basic";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#basic").dataTable({
            "processing": true,
            "serverSide": true,
            "bSort": false,
            "sAjaxSource": "/api/Guest",
            "columns": [
                { "data": "Name" },
                { "data": "MailAddress" },
                { "data": "Country" },
                { "data": "Aniversary" },
                { "data": "Gender" }
            ],
            "fnServerData": function (sSource, aoData, fnCalllback) {
                $.ajax({
                    "dataType": "json",
                    "contentType": "application/json",
                    "type": "GET",
                    "url": sSource,
                    "data": aoData,
                    "success": function (data) {
                        fnCalllback(data);
                        $("#basic").show();
                    },
                    error: function (xhr, textStatus, error) {
                        if (typeof console == "object") {
                            console.log(xhr.status + "," + xhr.responseText + "," + textStatus + "," + error);
                        }
                    }
                });
            }
        });
    });
</script>
<h2>Basic data</h2>

<table id="basic" class="table table-striped table-bordered dt-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mail Address</th>
            <th>Country</th>
            <th>Aniversary</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Mail Address</th>
            <th>Country</th>
            <th>Aniversary</th>
            <th>Gender</th>
        </tr>
    </tfoot>
    <tbody></tbody>

</table>